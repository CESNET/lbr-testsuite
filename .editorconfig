root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.py]
indent_style = space
indent_size = 4

[*.{c,h}]
indent_style = tab

[Makefile]
indent_style = tab

[*.{yaml,yml}]
indent_style = space
indent_size = 4

[{pytest/tests/**.xml,modules/trex/trex_client/**,example/**,framework/**}]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset
